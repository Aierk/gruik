{% if user is defined %}
<div class="ui attached stackable menu">
    <div class="ui container">
        <a class="item" href="/">
            <img src="{{ asset('img/gruik-black.png') }}" alt="">
        </a>
        <div class="item">
            <div class="ui input"><input type="text" placeholder="Search..."></div>
        </div>
        <a class="item">
            <i class="icon globe"></i> Browse
        </a>
        <a class="item" href="{{ path('create') }}">
            <i class="icon plus"></i> Create
        </a>
        {% if user %}
            <div class="ui simple dropdown right item">
                <img class="ui avatar image" src="https://avatars0.githubusercontent.com/u/301169?v=3&s=460" alt="">
                <i class="dropdown icon"></i>
                <div class="menu">
                    <a class="item"><i class="configure icon"></i> Settings</a>
                    <a class="item" href="{{ path('logout') }}"><i class="sign out icon"></i> Logout</a>
                </div>
            </div>
        {% endif %}
    </div>
</div>
{% endif %}
